@model UpdateDeliveryAddressViewModel

<div class="page-banner"></div>
<h1 class="page-title">Update Address</h1>

<div class="container userForm">
    <form asp-action="Update" asp-controller="DeliveryAddress" asp-route-id="@Model.DeliveryAddress.DeliveryAddressId" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" asp-for="@Model.DeliveryAddress.Name" value="@Model.DeliveryAddress.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Street Address</label>
            <input type="text" asp-for="@Model.DeliveryAddress.StreetAddress" value="@Model.DeliveryAddress.StreetAddress" class="form-control" />
        </div>

        <div class="form-group">
            <label>City</label>
            <input type="text" asp-for="@Model.DeliveryAddress.City" value="@Model.DeliveryAddress.City" class="form-control" />
        </div>

        <div class="form-group">
            <label>State</label>
            <select class="form-control" asp-for="@Model.DeliveryAddress.State" value="@Model.DeliveryAddress.State">
                <option>NSW</option>
                <option>VIC</option>
                <option>QLD</option>
                <option>NT</option>
                <option>WA</option>
                <option>TAS</option>
            </select>
        </div>

        <div class="form-group">
            <label>Postcode</label>
            <input type="text" asp-for="@Model.DeliveryAddress.Postcode" value="@Model.DeliveryAddress.Postcode" class="form-control" />
        </div>

        <button type="submit" class="btn btn-warning">Update</button>

    </form>
</div>