<div class="page-banner hamper-index-banner"></div>
<h1 class="page-title">Gift Hampers</h1>

<div class="container">
    <form @*asp-action="Index" asp-controller="Package" *@ method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="form-group">
                    <label>Search</label>
                    <input type="text" @*asp-for="SearchQuery" *@ class="form-control" />

                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label>Sort By</label>
                    <select class="form-control" @*asp-for="@Model.SortBy" *@ id="sel1">
                        <option>Name(A - Z)</option>
                        <option>Location(A - Z)</option>
                        <option>Price(High - Low)</option>
                        <option>Price(Low - High)</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-1">
                <div form-group>
                    <label>minPrice</label>
                    <input class="form-control" type="text" @*asp-for="MinPrice" value="@Model.MinPrice" *@ />
                </div>
            </div>
            <div class="col-lg-1">
                <div form-group>
                    <label>maxPrice</label>
                    <input class="form-control" type="text" @*asp-for="MaxPrice" value="@Model.MaxPrice" *@ />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-info" style="width:100%;">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </div>
        </div>
    </form>
</div>

<hr />

<div class="container">
    <table class="table-bordered">
        @foreach (var item in Model.Hampers)
        {
            <tr>
                <td>@item.Name</td>
                <td>$@item.Price</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Update" asp-controller="Hamper" asp-route-id="@item.HamperId">Update</a>
                    <a>Delete</a>
                </td>
            </tr>
        }
    </table>
    <a asp-action="Create" asp-controller="Hamper">create Hamper</a>
</div>



