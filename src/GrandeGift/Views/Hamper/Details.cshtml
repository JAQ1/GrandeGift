            {
                <div class="panel panel-default package">
                    <div class="panel-heading">
                        <h3>@item.Name</h3>
                    </div>
                    <div class="panel-body">
                        <img src="~/@item.PhotoPath" alt="Image Error" class="img-responsive" />
