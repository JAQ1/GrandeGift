@model UpdateGiftViewModel

<div class="page-banner manage-hamper-banner"></div>
<h1 class="page-title">Update Gift</h1>

<div class="container userForm">
    <form asp-action="Update" asp-controller="Gift" asp-route-id="@Model.GiftId" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name" value="@Model.Name"/>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" asp-for="@Model.Price" value="@Model.Price" />
        </div>

        <div class="form-group">
            <label>Photo</label>
            <input type="file" class="form-control" asp-for="@Model.PhotoPath" value="@Model.PhotoPath" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-warning">Update</button>
        </div>
    </form>
</div>