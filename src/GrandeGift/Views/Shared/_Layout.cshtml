<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GrandeGift</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="https://fonts.googleapis.com/css?family=Julius+Sans+One" rel="stylesheet">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <header>
        <nav>
            <div class="container-fluid body-content">
                <div id="nav" class="overlay">
                    <div class="overlay__content">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-area="" asp-controller="Hamper" asp-action="Index">Hampers</a>

                        @*<div class="overlay-footer">
                            <div class="row">
                                <div class="col-lg-2">
                                    <a>copy</a>
                                </div>
                                <div class="col-lg-8">
                                    <div class="contact-info">
                                        <span class="glyphicon glyphicon-phone "></span><p>0489 726 115</p>
                                        <br />
                                        <span class="glyphicon glyphicon-envelope "></span><p>grandeTravels@email.com</p>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <a>terms</a>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>

            <h1 class="navTitle">Grande Gift</h1>

            <div class="navToggleBtn" onclick="toggleNav()">
                <div class="hamburger"></div>
            </div>

            <div class="userBtn dropdown">
                <a href="#" class="glyphicon glyphicon-user dropdown-toggle" data-toggle="dropdown"></a>

                <ul class="dropdown-menu user-options">
                    <li class="dropdown-header"><a>User Options</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        //<li class="dropdown-header"><a href="#">Logged in as <strong>@User.Identity.Name</strong></a></li>
                        <li class=""><a asp-controller="Profile" asp-action="Index">Your Profile</a></li>
                            <li class="divider"></li>
                            <form asp-action="LogOff" asp-controller="Account" method="post"><button id="btn-logout">Logout</button></form>
                    }
                    else
                    {
                        <li><a asp-action="SignUp" asp-controller="Account">Sign Up</a></li>
                            <li><a asp-action="Login" asp-controller="Account">Login</a></li>
                    }
                </ul>
            </div>

            <div class="cartBtn">
                <a class="glyphicon glyphicon-shopping-cart"></a>
            </div>
        </nav>
    </header>
    <main class="container-fluid body-content">
        @RenderBody()
    </main>
    <footer>
        @*<div class="row">
            <div class="col-lg-4">
                Copyright Notice
            </div>
            <div class="col-lg-4">

            </div>
            <div class="col-lg-2">
                <a>privacy policy</a>
            </div>
            <div class="col-lg-2">
                <a>terms of use</a>
            </div>
        </div>*@

    </footer>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/jquery.js" asp-append-version="true"></script>

    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
