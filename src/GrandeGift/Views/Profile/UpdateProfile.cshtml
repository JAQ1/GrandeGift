
<div class="page-banner profile-banner"></div>
<h1 class="page-title">Update Profile</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            @*<img src="~/@Model.DisplayPhotoPath" alt="Cant display image" class="img-thumbnail img-responsive user-img" />*@
            <hr />

        </div>
        <div class="col-lg-9">
            <ul class="nav nav-tabs profile-options">
                <li><a asp-controller="Profile" asp-action="Index">Overview</a></li>
                <li><a href="#">My Bookings</a></li>
                <li class="active"><a href="#">Update Profile</a></li>
            </ul>
            <br />
            <div class="profile-options">
                <form asp-action="UpdateProfile" asp-controller="Profile" method="post">
                    <div class="form-group">
                        <h2><strong>Display Name:</strong></h2>
                        <input class="form-control" type="text" @*asp-for="@Model.DisplayName" value="@Model.DisplayName"*@ />
                    </div>

                    <div class="form-group">
                        <h2><strong>Firstname:</strong></h2>
                        <input class="form-control" type="text" @*asp-for="@Model.FirstName" value="@Model.FirstName"*@ />
                    </div>

                    <div class="form-group">
                        <h2><strong>Lastname:</strong></h2>
                        <input class="form-control" type="text" @*asp-for="@Model.LastName" value="@Model.LastName"*@ />
                    </div>

                    <div class="form-group">
                        <h2><strong>Email:</strong></h2>
                        <input class="form-control" type="text" @*asp-for="@Model.Email" value="@Model.Email"*@ />
                    </div>

                    <div class="form-group">
                        <h2><strong>Phone:</strong></h2>
                        <input class="form-control" type="text" @*asp-for="@Model.Phone" value="@Model.Phone"*@ />
                    </div>

                    @*<div class="form-group" id="dp-upload">
                        <label>Change Display Photo:</label>
                        <input asp-for="DisplayPhotoPath" class="form-control" type="file" />
                    </div>*@

                    <button type="submit" class="btn btn-info">Update</button>
                </form>
            </div>
            <br />
        </div>
    </div>
</div>
